{
  "document_id": "3M_OEM_SOP",
  "nodes": [
    {
      "id": "S1",
      "type": "step",
      "text": "Clean new external composite surface with approved cleaner to remove mold release materials.",
      "order": 1
    },
    {
      "id": "S2",
      "type": "step",
      "text": "Sand old or new gelcoat with DA sander and grade 80+ abrasive discs to remove imperfections.",
      "order": 2
    },
    {
      "id": "S3",
      "type": "step",
      "text": "Apply dry guide coat and re-sand for even texture.",
      "order": 3
    },
    {
      "id": "S4",
      "type": "step",
      "text": "Mix Marine Blister Repair Filler and apply, then feather and sand.",
      "order": 4
    },
    {
      "id": "S5",
      "type": "step",
      "text": "Apply Marine Premium Filler in tight coat and sand with grade 120+ abrasive discs.",
      "order": 5
    },
    {
      "id": "S6",
      "type": "step",
      "text": "Finish by sanding repair area with grade 220+ abrasive discs.",
      "order": 6
    },
    {
      "id": "S7",
      "type": "step",
      "text": "Finish repair area with 3M Hookit 775L Cubitron II grade 220+.",
      "order": 7
    },
    {
      "id": "S8",
      "type": "step",
      "text": "Ensure surface is dry and mask areas with 3M tapes and Purple Premium Plus Masking Film.",
      "order": 8
    },
    {
      "id": "S9",
      "type": "step",
      "text": "Mix gelcoat in a 3M PPS Series 2.0 disposable spray cup.",
      "order": 9
    },
    {
      "id": "S10",
      "type": "step",
      "text": "Adjust settings on 3M Performance Spray Gun and apply gelcoat.",
      "order": 10
    },
    {
      "id": "S11",
      "type": "step",
      "text": "Refer to page 3 & 4 for the gelcoat finishing process.",
      "order": 11
    },
    {
      "id": "S12",
      "type": "step",
      "text": "Clean new external composite surface with approved cleaner.",
      "order": 12
    },
    {
      "id": "S13",
      "type": "step",
      "text": "Sand refinement with 3M Hookit 775L Cubitron II 320+ and then 400+.",
      "order": 13
    },
    {
      "id": "S14",
      "type": "step",
      "text": "Refine sand scratch with P1200 grade 3M Hookit Flexible Abrasive Foam Discs.",
      "order": 14
    },
    {
      "id": "S15",
      "type": "step",
      "text": "Compound surface with 3M Perfect-It Gelcoat Heavy Cutting Compound and a Rotary Polishing machine.",
      "order": 15
    },
    {
      "id": "S16",
      "type": "step",
      "text": "Polish with 3M Perfect-It Gelcoat Compound + Polish and wool compounding pad.",
      "order": 16
    },
    {
      "id": "S17",
      "type": "step",
      "text": "Apply 3M protective coating.",
      "order": 17
    },
    {
      "id": "S18",
      "type": "step",
      "text": "Ensure the surface is dry before starting.",
      "order": 18
    },
    {
      "id": "S19",
      "type": "step",
      "text": "Clean the surface with approved cleaner.",
      "order": 19
    },
    {
      "id": "S20",
      "type": "step",
      "text": "Using a DA sander, sand the surface with 3M\u2122 Hookit\u2122 775L Cubitron\u2122 II 80+ grade abrasive discs.",
      "order": 20
    },
    {
      "id": "S21",
      "type": "step",
      "text": "Apply 3M\u2122 Marine Premium Filler.",
      "order": 21
    },
    {
      "id": "S22",
      "type": "step",
      "text": "After it sets, apply dry guide coat and sand with 120+ grade abrasive discs.",
      "order": 22
    },
    {
      "id": "S23",
      "type": "step",
      "text": "Finish sanding with 220+ grade abrasive discs.",
      "order": 23
    },
    {
      "id": "S24",
      "type": "step",
      "text": "Clean the surface.",
      "order": 24
    },
    {
      "id": "S25",
      "type": "step",
      "text": "Apply masking tapes and film as described in the gelcoat process.",
      "order": 25
    },
    {
      "id": "S26",
      "type": "step",
      "text": "Mix primer in a 3M\u2122 PPS\u2122 Series 2.0 cup and apply with a 3M\u2122 Performance Spray Gun held 15cm-20cm from the surface.",
      "order": 26
    },
    {
      "id": "S27",
      "type": "step",
      "text": "Apply dry guide coat and sand the primer with 320+ grade abrasive discs, then repeat with 400+ grade.",
      "order": 27
    },
    {
      "id": "S28",
      "type": "step",
      "text": "Clean the surface.",
      "order": 28
    },
    {
      "id": "S29",
      "type": "step",
      "text": "Mix marine paint in a 3M\u2122 PPS\u2122 Series 2.0 cup and apply with a 3M\u2122 Performance Spray Gun.",
      "order": 29
    },
    {
      "id": "S30",
      "type": "step",
      "text": "Refer to the following page for the marine paint finishing process.",
      "order": 30
    },
    {
      "id": "S31",
      "type": "step",
      "text": "Clean the surface with an approved cleaner.",
      "order": 31
    },
    {
      "id": "S32",
      "type": "step",
      "text": "Sand the bottom surface using a dual-action sander with 3M\u2122 Hookit\u2122 775L Cubitron\u2122 II 220+ grade abrasive and clean the area.",
      "order": 32
    },
    {
      "id": "S33",
      "type": "step",
      "text": "Mix and apply 3M\u2122 Marine Premium Filler.",
      "order": 33
    },
    {
      "id": "S34",
      "type": "step",
      "text": "Allow the filler to cure and sand with 120+ grade abrasive, then finish with 220+ grade.",
      "order": 34
    },
    {
      "id": "S35",
      "type": "step",
      "text": "Apply masking tapes and film as described in previous processes.",
      "order": 35
    },
    {
      "id": "S36",
      "type": "step",
      "text": "Mix bottom paint in a 3M\u2122 PPS\u2122 Series 2.0 cup (remove lid filter) and apply using a 3M\u2122 Performance Spray Gun, holding it 15cm-20cm from the surface.",
      "order": 36
    },
    {
      "id": "S37",
      "type": "step",
      "text": "Apply paint 5cm-20cm from surface.",
      "order": 37
    },
    {
      "id": "S38",
      "type": "step",
      "text": "Evaluate product suitability and follow regulations.",
      "order": 38
    }
  ],
