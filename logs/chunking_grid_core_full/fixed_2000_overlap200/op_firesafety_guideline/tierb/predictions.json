{
  "document_id": "op_firesafety_guideline",
  "nodes": [
    {
      "id": "S1",
      "type": "step",
      "text": "Identify potential fire risks in working machines.",
      "order": 1
    },
    {
      "id": "S2",
      "type": "step",
      "text": "Evaluate each machine's operating environment.",
      "order": 2
    },
    {
      "id": "S3",
      "type": "step",
      "text": "Issue clear instructions for safety.",
      "order": 3
    },
    {
      "id": "S4",
      "type": "step",
      "text": "Supervise compliance with safety instructions.",
      "order": 4
    },
    {
      "id": "S5",
      "type": "step",
      "text": "Inspect and clean engine compartment at least once a week.",
      "order": 5
    },
    {
      "id": "S6",
      "type": "step",
      "text": "Clean with compressed air after shift.",
      "order": 6
    },
    {
      "id": "S7",
      "type": "step",
      "text": "Inspect for leaks after cleaning.",
      "order": 7
    },
    {
      "id": "S8",
      "type": "step",
      "text": "Visually inspect electrical systems at least once a year.",
      "order": 8
    },
    {
      "id": "S9",
      "type": "step",
      "text": "Service electrical systems daily on electric-powered and hybrid machines.",
      "order": 9
    },
    {
      "id": "S10",
      "type": "step",
      "text": "Use multimeter to measure voltage drops.",
      "order": 10
    },
    {
      "id": "S11",
      "type": "step",
      "text": "Use thermal imaging camera to detect anomalies.",
      "order": 11
    },
    {
      "id": "S12",
      "type": "step",
      "text": "Check emergency kill switch before starting the machine.",
      "order": 12
    },
    {
      "id": "S13",
      "type": "step",
      "text": "Repair any malfunction that required its use.",
      "order": 13
    },
    {
      "id": "S14",
      "type": "step",
      "text": "Inspect battery.",
      "order": 14
    },
    {
      "id": "S15",
      "type": "step",
      "text": "Repair any deviations in battery.",
      "order": 15
    },
    {
      "id": "S16",
      "type": "step",
      "text": "Ensure cable terminals are intact and attached.",
      "order": 16
    },
    {
      "id": "S17",
      "type": "step",
      "text": "Protect cables with terminal covers.",
      "order": 17
    },
    {
      "id": "S18",
      "type": "step",
      "text": "Check electric panel.",
      "order": 18
    },
    {
      "id": "S19",
      "type": "step",
      "text": "Repair any redundant or hanging wires.",
      "order": 19
    },
    {
      "id": "S20",
      "type": "step",
      "text": "Check attachment of cables in high-vibration engine compartment.",
      "order": 20
    },
    {
      "id": "S21",
      "type": "step",
      "text": "Inspect alternator.",
      "order": 21
    },
    {
      "id": "S22",
      "type": "step",
      "text": "Check fasteners, belts, and bearings in alternator.",
      "order": 22
    },
    {
      "id": "S23",
      "type": "step",
      "text": "Inspect exhaust pipe for leaks.",
      "order": 23
    },
    {
      "id": "S24",
      "type": "step",
      "text": "Ensure all thermal shields are in place.",
      "order": 24
    },
    {
      "id": "S25",
      "type": "step",
      "text": "Check ammable liquid hoses are not too close.",
      "order": 25
    },
    {
      "id": "S26",
      "type": "step",
      "text": "Ensure safe environment for diesel particulate filter regeneration.",
      "order": 26
    },
    {
      "id": "S27",
      "type": "step",
      "text": "Inspect swivelling joint hoses and electrical systems weekly.",
      "order": 27
    },
    {
      "id": "S28",
      "type": "step",
      "text": "Ensure all operating manuals are available and understandable.",
      "order": 28
    },
    {
      "id": "S29",
      "type": "step",
      "text": "Check auxiliary heater cleanliness and condition before winter.",
      "order": 29
    },
    {
      "id": "S30",
      "type": "step",
      "text": "Test hand-held fire extinguishers under supervision.",
      "order": 30
    },
    {
      "id": "S31",
      "type": "step",
      "text": "Ensure machines in dust or fire hazard environments have a fixed, fully automatic fire extinguishing system.",
      "order": 31
    },
    {
      "id": "S32",
      "type": "step",
      "text": "Provide at least three litres of extinguishing agent for each cubic meter of the engine or heater compartment.",
      "order": 32
    },
    {
      "id": "S33",
      "type": "step",
      "text": "Install detection system covering entire engine compartment and connect to non-fused cables.",
      "order": 33
    },
    {
      "id": "S34",
      "type": "step",
      "text": "Obtain installation certificate and compliance test report.",
      "order": 34
    },
    {
      "id": "S35",
      "type": "step",
      "text": "Confirm system operation at start-up and repair any malfunctions.",
      "order": 35
    },
    {
      "id": "S36",
      "type": "step",
      "text": "Service the system at least once a year.",
      "order": 36
    },
    {
      "id": "S37",
      "type": "step",
      "text": "Clean engine compartments daily in hazardous environments.",
      "order": 37
    },
    {
      "id": "S38",
      "type": "step",
      "text": "Check signs and markings.",
      "order": 38
    },
    {
      "id": "S39",
      "type": "step",
      "text": "Inspect machine electrical systems (battery cables, harnesses, main power switch, alternator).",
      "order": 39
    },
    {
      "id": "S40",
      "type": "step",
      "text": "Examine engine mechanics (fuel/oil/hydraulic lines, exhaust system).",
      "order": 40
    },
    {
      "id": "S41",
      "type": "step",
      "text": "Inspect first-aid extinguishing equipment (hand-held extinguishers, system log).",
      "order": 41
    },
    {
      "id": "S42",
      "type": "step",
      "text": "Check auxiliary heater (installation, fuel manifold, exhaust, electrical system).",
      "order": 42
    },
    {
      "id": "S43",
      "type": "step",
      "text": "Inspect mains power systems.",
      "order": 43
    },
    {
      "id": "S44",
      "type": "step",
      "text": "Assess general condition and cleanliness.",
      "order": 44
    },
    {
      "id": "S45",
      "type": "step",
      "text": "Repair any malfunctions that could lead to an accident without delay.",
      "order": 45
    },
    {
      "id": "S46",
      "type": "step",
      "text": "Arrange practical training on accident and fire procedures.",
      "order": 46
    },
    {
      "id": "S47",
      "type": "step",
      "text": "Check cables and fasteners for security, heat resistance, insulation, and lead-throughs.",
      "order": 47
    },
    {
      "id": "S48",
      "type": "step",
      "text": "Inspect the condition of non-fused cables and terminal covers in fuses and batteries.",
      "order": 48
    },
    {
      "id": "S49",
      "type": "step",
      "text": "Clean engine and heater compartments.",
      "order": 49
    },
    {
      "id": "S50",
      "type": "step",
      "text": "Check the availability, markings, and operator training for first-aid extinguishing equipment.",
      "order": 50
    },
    {
      "id": "S51",
      "type": "step",
      "text": "Identify the company name: Pohjola Insurance Ltd.",
      "order": 51
    },
    {
      "id": "S52",
      "type": "step",
      "text": "Determine the business ID: 1458359-3.",
      "order": 52
    },
    {
      "id": "S53",
      "type": "step",
      "text": "Locate the company address: Helsinki, Gebhardinaukio 1, 00013 OP, Finland.",
      "order": 53
    },
    {
      "id": "S54",
      "type": "step",
      "text": "Identify the domicile: Helsinki.",
      "order": 54
    },
    {
      "id": "S55",
      "type": "step",
      "text": "Determine the regulatory authority: Financial Supervisory Authority, www.fiva.fi.",
      "order": 55
    },
    {
      "id": "C1",
      "type": "condition",
      "text": "Working machines must be evaluated for fire risks based on their operating conditions and environment."
    },
    {
      "id": "C2",
      "type": "condition",
      "text": "Shut down engine before inspecting for fuel leaks."
    },
    {
      "id": "C3",
      "type": "condition",
      "text": "Protect hydraulic hoses from high temperatures."
    },
    {
      "id": "C4",
      "type": "condition",
      "text": "Inspect electrical systems annually and document inspections."
    },
    {
      "id": "C5",
      "type": "condition",
      "text": "Service electrical systems daily on electric-powered and hybrid machines."
    },
    {
      "id": "C6",
      "type": "condition",
      "text": "Do not use emergency kill switch for normal shutdown."
    },
    {
      "id": "C7",
      "type": "condition",
      "text": "Ensure sufficient ventilation in battery compartment."
    },
    {
      "id": "C8",
      "type": "condition",
      "text": "Replace cables showing signs of abrasion or heat damage."
    },
    {
      "id": "C9",
      "type": "condition",
      "text": "Fasteners and cable ties should withstand temperatures of 120\u00b0C."
    },
    {
      "id": "C10",
      "type": "condition",
      "text": "Do not attach cables to pipes or hoses containing flammable material."
    },
    {
      "id": "C11",
      "type": "condition",
      "text": "Ensure regeneration occurs in a safe outdoor environment away from flammable materials."
    },
    {
      "id": "C12",
      "type": "condition",
      "text": "Delay regeneration if machine is in a fire-hazard environment."
    },
    {
      "id": "C13",
      "type": "condition",
      "text": "Never leave machine unattended during regeneration."
    },
    {
      "id": "C14",
      "type": "condition",
      "text": "Machines > 3,000 kg must have at least two hand-held fire extinguishers."
    },
    {
      "id": "C15",
      "type": "condition",
      "text": "Machines for crushing timber or energy waste need four hand-held fire extinguishers."
    },
    {
      "id": "C16",
      "type": "condition",
      "text": "Machines in dust or fire hazard environments must have a fixed, fully automatic fire extinguishing system."
    },
    {
      "id": "C17",
      "type": "condition",
      "text": "Provide at least three litres of extinguishing agent for each cubic meter of the engine or heater compartment."
    },
    {
      "id": "C18",
      "type": "condition",
      "text": "Install detection system covering entire engine compartment and connect to non-fused cables."
    },
    {
      "id": "C19",
      "type": "condition",
      "text": "Obtain installation certificate and compliance test report."
    },
    {
      "id": "C20",
      "type": "condition",
      "text": "Confirm system operation at start-up and repair any malfunctions."
    },
    {
      "id": "C21",
      "type": "condition",
      "text": "Service the system at least once a year."
    },
    {
      "id": "C22",
      "type": "condition",
      "text": "Clean engine compartments daily in hazardous environments."
    },
    {
      "id": "C23",
      "type": "condition",
      "text": "Perform inspections in the order listed."
    }
  ],
