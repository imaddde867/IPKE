# Explainium Configuration
# Copy this file to `.env` and adjust settings as needed.

# Environment
EXPLAINIUM_ENV=development
EXPLAINIUM_LOG_LEVEL=INFO

# GPU Configuration
ENABLE_GPU=true
# Options: auto, metal, cuda, cpu
GPU_BACKEND=auto
# Set to a positive number (e.g., 10) to limit GPU layers on lower-memory GPUs; -1 uses all layers
LLM_GPU_LAYERS=-1
# Fraction of available GPU memory to use (0 < value â‰¤ 1)
GPU_MEMORY_FRACTION=0.8

# File Processing
MAX_FILE_SIZE_MB=50
PROCESSING_TIMEOUT=300

# API Settings
API_HOST=127.0.0.1
API_PORT=8000

# Quality Thresholds
CONFIDENCE_THRESHOLD=0.8
QUALITY_THRESHOLD=0.7

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501
