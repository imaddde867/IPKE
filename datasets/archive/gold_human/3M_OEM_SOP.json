{
  "doc_id": "3M_OEM_SOP",
  "procedure": {
    "title": "Standard Operating Procedures for Marine OEM",
    "goal": "To prepare, apply, and finish gelcoat, marine paint, and antifouling paint on marine surfaces"
  },
  "steps": [
    {
      "id": "s1",
      "action": "clean surface",
      "object": "new composite surface",
      "materials": [
        "approved cleaner",
        "boat wash"
      ],
      "note": "Remove all mold release materials."
    },
    {
      "id": "s2",
      "action": "sand gelcoat",
      "object": "gelcoat surface",
      "tools": [
        "DA sander"
      ],
      "materials": [
        "80+ grade Cubitron II abrasive discs",
        "dry guide coat"
      ],
      "note": "Sand until surface imperfections are removed and texture is even."
    },
    {
      "id": "s3",
      "action": "apply blister repair filler",
      "conditions": [
        "if needed"
      ],
      "materials": [
        "Marine Blister Repair Filler"
      ],
      "note": "Fill 85% of the cavity."
    },
    {
      "id": "s4",
      "action": "wait for filler to cure",
      "parameters": {
        "duration": "30 minutes"
      }
    },
    {
      "id": "s5",
      "action": "feather and sand blister repair",
      "materials": [
        "80+ grade Cubitron II abrasive disc",
        "dry guide coat"
      ]
    },
    {
      "id": "s6",
      "action": "apply premium filler",
      "materials": [
        "Marine Premium Filler"
      ],
      "note": "Start with a tight coat."
    },
    {
      "id": "s7",
      "action": "sand filler to final finish",
      "tools": [
        "DA sander"
      ],
      "materials": [
        "120+ grade Cubitron II abrasive discs",
        "220+ grade Cubitron II abrasive discs"
      ]
    },
    {
      "id": "s8",
      "action": "mask non-application areas",
      "materials": [
        "Precision Masking Tape",
        "Performance Industrial Masking Tape",
        "Purple Premium Plus Masking Film"
      ]
    },
    {
      "id": "s9",
      "action": "apply gelcoat",
      "tools": [
        "Performance Spray Gun",
        "PPS Series 2.0 spray cup"
      ],
      "parameters": {
        "distance": "15cm-20cm"
      }
    },
    {
      "id": "s10",
      "action": "perform sanding refinement",
      "object": "cured gelcoat",
      "tools": [
        "soft interface pad"
      ],
      "materials": [
        "320+ and 400+ grade abrasives",
        "P800 grade flexible abrasive foam discs"
      ],
      "note": "If surface is in good condition, start with P800 grade."
    },
    {
      "id": "s11",
      "action": "refine sand scratches",
      "materials": [
        "P1200 grade flexible abrasive foam discs"
      ]
    },
    {
      "id": "s12",
      "action": "compound the surface (6-step process)",
      "tools": [
        "rotary polishing machine",
        "low linting wool compounding pad"
      ],
      "materials": [
        "Perfect-It Gelcoat Heavy Cutting Compound"
      ],
      "parameters": {
        "speed": "1400-1800 rpm"
      }
    },
    {
      "id": "s13",
      "action": "polish the surface (6-step process)",
      "tools": [
        "rotary polishing machine",
        "wool compounding pad"
      ],
      "materials": [
        "Perfect-It Gelcoat Compound + Polish"
      ],
      "parameters": {
        "speed": "1400-1800 rpm"
      }
    },
    {
      "id": "s14",
      "action": "compound and polish the surface (5-step process)",
      "tools": [
        "rotary polishing machine",
        "low linting wool compounding pad"
      ],
      "materials": [
        "Perfect-It Gelcoat Compound + Polish"
      ],
      "parameters": {
        "speed": "1400-1800 rpm"
      }
    },
    {
      "id": "s15",
      "action": "apply boat wax",
      "materials": [
        "Perfect-It Boat Wax"
      ],
      "note": "Apply to a 10cm x 10cm area at a time."
    },
    {
      "id": "s16",
      "action": "prepare marine paint surface",
      "object": "surface for painting",
      "tools": [
        "DA sander"
      ],
      "materials": [
        "approved cleaner",
        "80+ grade abrasive discs"
      ]
    },
    {
      "id": "s17",
      "action": "apply and sand marine filler",
      "materials": [
        "Marine Premium Filler",
        "dry guide coat",
        "120+ and 220+ grade abrasive discs"
      ]
    },
    {
      "id": "s18",
      "action": "mask for primer application",
      "materials": [
        "masking tapes",
        "masking film"
      ]
    },
    {
      "id": "s19",
      "action": "apply primer",
      "tools": [
        "Performance Spray Gun",
        "PPS Series 2.0 cup"
      ],
      "parameters": {
        "distance": "15cm-20cm"
      }
    },
    {
      "id": "s20",
      "action": "sand primer",
      "materials": [
        "dry guide coat",
        "320+ and 400+ grade abrasive discs"
      ]
    },
    {
      "id": "s21",
      "action": "apply marine paint",
      "tools": [
        "Performance Spray Gun",
        "PPS Series 2.0 cup"
      ]
    },
    {
      "id": "s22",
      "action": "sand paint or clearcoat",
      "tools": [
        "DA sander",
        "soft interface pad"
      ],
      "note": "Dry or wet sanding options are available."
    },
    {
      "id": "s23",
      "action": "refine scratches",
      "note": "Dry or wet refinement options are available."
    },
    {
      "id": "s24",
      "action": "compound surface",
      "object": "painted surface",
      "tools": [
        "rotary polisher",
        "wool or green foam compounding pad"
      ],
      "materials": [
        "Perfect-It Fast Cut Plus Extreme"
      ],
      "parameters": {
        "speed": "1400-1800 rpm"
      }
    },
    {
      "id": "s25",
      "action": "polish surface",
      "object": "painted surface",
      "tools": [
        "rotary polisher",
        "wool or blue foam polishing pad"
      ],
      "materials": [
        "Perfect-It Ultrafina SE Polish"
      ],
      "parameters": {
        "speed": "1400-1800 rpm"
      }
    },
    {
      "id": "s26",
      "action": "apply boat wax to painted surface",
      "materials": [
        "Perfect-It Boat Wax"
      ]
    },
    {
      "id": "s27",
      "action": "sand bottom surface",
      "object": "area for antifouling paint",
      "tools": [
        "dual-action sander"
      ],
      "materials": [
        "220+ grade Cubitron II abrasive"
      ]
    },
    {
      "id": "s28",
      "action": "apply and sand filler on bottom surface",
      "materials": [
        "Marine Premium Filler",
        "120+ and 220+ grade abrasive"
      ]
    },
    {
      "id": "s29",
      "action": "mask for bottom paint application",
      "materials": [
        "masking tapes",
        "masking film"
      ]
    },
    {
      "id": "s30",
      "action": "apply bottom paint",
      "tools": [
        "Performance Spray Gun",
        "PPS Series 2.0 cup"
      ],
      "parameters": {
        "distance": "15cm-20cm"
      }
    }
  ],
